    "rollup": "rollup -c rollup.config.js",
    "ngc": "ngc -p tsconfig-prod.json",
    "minify": "uglifyjs compiled/build.js --screw-ie8 --compress --mangle --output compiled/build.min.js",
    "browserify" : "browserify node_modules/sharedb/lib/client/index.js --standalone ShareDB -o compiled/sharedb-client.js",
    "build": "npm run ngc && npm run rollup && npm run minify && gulp prod"
